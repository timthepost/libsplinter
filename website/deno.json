{
  "imports": {
    "lume/": "https://deno.land/x/lume@v3.0.11/",
    "lume/cms/": "https://cdn.jsdelivr.net/gh/lumeland/cms@0.12.5/",
    "lume/jsx-runtime": "https://deno.land/x/ssx@v0.1.12/jsx-runtime.ts"
  },
  "tasks": {
    "lume": "echo \"import 'lume/cli.ts'\" | deno run -A -",
    "build": "deno task lume",
    "serve": "deno task lume -s",
    "dev": "LUME_DRAFTS=true deno task lume -s",
    "mock": "deno run -A --watch src/_serve.ts",
    "clean": "rm -rf _site || true; rm -rf _cache || true",
    "update-deps": "deno run -A --quiet 'https://deno.land/x/nudd@v0.2.8/cli.ts' update plugins.ts deno.json",
    "cms": "deno task lume cms"
  },
  "compilerOptions": {
    "types": [
      "lume/types.ts"
    ],
    "jsx": "react-jsx",
    "jsxImportSource": "lume"
  },
  "lint": {
    "exclude": [
      "./_site"
    ],
    "rules": {
      "tags": [
        "recommended"
      ],
      "exclude": [
        "no-import-prefix"
      ]
    },
    "plugins": [
      "https://deno.land/x/lume@v3.0.11/lint.ts"
    ]
  },
  "fmt": {
    "exclude": [
      "./_site"
    ]
  },
  "unstable": [
    "kv",
    "temporal",
    "fmt-component"
  ]
}
