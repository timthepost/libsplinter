#!/bin/sh
# This helps me better support people who pull from splinter-devel
# as well as those who use tarball releases.

HASH=$(git rev-parse --short HEAD) || HASH="local-build"

cat << EOF > ./build.h

/* AUTO GENERATED BY ./genbuildh - DO NOT EDIT MANUALLY */
#ifndef BUILD_H
#define BUILD_H

#define SPLINTER_BUILD "${HASH}"

#endif /* BUILD_H */

EOF
