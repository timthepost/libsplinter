#!/bin/sh

# This helps me better support people who pull from the (soon upcoming)
# development branch. It'll also be in the last commit before each release.
# Could probably stand to be a little more robust.

HASH=$(git rev-parse --short HEAD) || HASH="local-build"

cat << EOF > ./build.h

/* AUTO GENERATED BY ./genbuildh - DO NOT EDIT MANUALLY */
#ifndef BUILD_H
#define BUILD_H

#define SPLINTER_BUILD "${HASH}"

#endif /* BUILD_H */

EOF
